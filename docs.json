{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Chainrails Documentation",
  "colors": {
    "primary": "#fa938c",
    "light": "#fa938c",
    "dark": "#fa938c"
  },
  "favicon": {
    "dark": "/logo/dark.png",
    "light": "/logo/light.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["index", "quickstart", "sdk-vs-api"]
          },
          {
            "group": "How it works",
            "pages": ["concepts/core", "concepts/chainrails-vs-others"]
          },
          {
            "group": "Developer Guides",
            "pages": [
              "guides/payments",
              "guides/quotes",
              "guides/routes",
              "guides/refunds",
              "guides/webhooks",
              "guides/paymaster"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/settlements",
              "essentials/integrations"
            ]
          },
          {
            "group": "Changelog & Roadmap",
            "pages": ["changelog/changelog", "changelog/upcoming"]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoints",
            "openapi": "api-reference/openapi.json"
          }
        ]
      },
      {
        "tab": "SDK reference",
        "groups": [
          {
            "group": "SDK documentation",
            "pages": ["sdk-reference/introduction"]
          },
          {
            "group": "Components",
            "pages": ["sdk-reference/components/payment-modal"]
          },
          {
            "group": "Modules",
            "pages": [
              {
                "group": "Intents",
                "pages": [
                  "sdk-reference/intents/create",
                  "sdk-reference/intents/get-by-id",
                  "sdk-reference/intents/get-all",
                  "sdk-reference/intents/get-for-sender",
                  "sdk-reference/intents/get-for-address",
                  "sdk-reference/intents/update"
                ]
              },
              {
                "group": "Router",
                "pages": [
                  "sdk-reference/router/get-optimal-routes",
                  "sdk-reference/router/get-all-supported-bridges",
                  "sdk-reference/router/get-supported-bridges",
                  "sdk-reference/router/get-supported-routes"
                ]
              },
              {
                "group": "Quotes",
                "pages": [
                  "sdk-reference/quotes/get-from-specific-bridge",
                  "sdk-reference/quotes/get-from-all-bridges",
                  "sdk-reference/quotes/get-best-across-bridges",
                  "sdk-reference/quotes/get-all"
                ]
              },
              {
                "group": "Chains",
                "pages": ["sdk-reference/chains/get-supported", "sdk-reference/chains/get-supported-tokens"]
              },
              {
                "group": "Client",
                "pages": ["sdk-reference/client/get-client-info"]
              }
            ]
          }
        ]
      },
      {
        "tab": "Contract Reference",
        "groups": [
          {
            "group": "Intent Broadcaster",
            "pages": ["contract-reference/introduction"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://dashboard.chainrails.io",
          "icon": "chart-bar"
        },
        {
          "anchor": "Demo",
          "href": "https://chainrails.io/demo",
          "icon": "tools"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@chainrails.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.chainrails.io"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/chainrails_io",
      "github": "https://github.com/horuslabsio",
      "linkedin": "https://linkedin.com/company/horuslabsio"
    }
  }
}
