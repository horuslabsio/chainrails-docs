{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Chainrails Documentation",
  "colors": {
    "primary": "#fa938c",
    "light": "#fa938c",
    "dark": "#fa938c"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "index",
              "quickstart",
              "sdk-vs-api"
            ]
          },
          {
            "group": "How it works",
            "pages": [
              "concepts/core",
              "concepts/chainrails-vs-others"
            ]
          },
          {
            "group": "Developer Guides",
            "pages": [
              "guides/quotes",
              "guides/routes",
              "guides/payments",
              "guides/refunds",
              "guides/webhooks",
              "guides/fee-model",
              "guides/integrations"
            ]
          },
          {
            "group": "Changelog & Roadmap",
            "pages": [
              "changelog/changelog",
              "changelog/upcoming"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "api-reference/openapi.json"
          }
        ]
      },
      {
        "tab": "SDK reference",
        "groups": [
          {
            "group": "SDK documentation",
            "pages": [
              "sdk-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.chainrails.io",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Demo",
          "href": "https://chainrails.io/demo",
          "icon": "tools"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/dark.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
